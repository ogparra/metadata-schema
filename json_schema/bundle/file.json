{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "definitions": {
        "file_ingest": {
            "properties": {
                "content": {
                    "description": "Content for any file type entity.",
                    "oneOf": [
                        {
                            "$ref": "https://schema.humancellatlas.org/type/file/5.1.0/sequence_file"
                        },
                        {
                            "$ref": "https://schema.humancellatlas.org/type/file/5.1.0/analysis_file"
                        }
                    ],
                    "type": "object"
                },
                "hca_ingest": {
                    "$ref": "https://schema.humancellatlas.org/bundle/5.1.0/ingest_audit",
                    "description": "Core fields added by HCA ingest service",
                    "type": "object"
                }
            },
            "required": [
                "hca_ingest",
                "content"
            ],
            "type": "object"
        }
    },
    "description": "A schema for a file bundle.",
    "id": "https://schema.humancellatlas.org/bundle/1.0.0/file",
    "properties": {
        "describedBy": {
            "description": "The URL reference to the schema.",
            "pattern": "https://schema.humancellatlas.org/bundle/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/file",
            "type": "string"
        },
        "files": {
            "description": "An array of files.",
            "items": {
                "$ref": "https://schema.humancellatlas.org/bundle/1.0.0/file#/definitions/file_ingest"
            },
            "type": "array"
        },
        "schema_type": {
            "description": "The type of the metadata schema entity.",
            "enum": [
                "file_bundle"
            ],
            "type": "string"
        },
        "schema_version": {
            "description": "The version number of the schema in major.minor.patch format.",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "type": "string"
        }
    },
    "required": [
        "describedBy",
        "schema_type"
    ],
    "title": "file",
    "type": "object"
}