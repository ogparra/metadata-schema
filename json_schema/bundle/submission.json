{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "definitions": {
        "file": {
            "additionalProperties": false,
            "description": "",
            "properties": {
                "checksums": {
                    "properties": {
                        "crc32": {
                            "description": "CRC-32 checksum of this file",
                            "type": "string"
                        },
                        "s3etag": {
                            "description": "S3 ETAG checksum of this file",
                            "type": "string"
                        },
                        "sha1": {
                            "description": "SHA-1 checksum of this file",
                            "type": "string"
                        },
                        "sha256": {
                            "description": "SHA-256 checksum of this file",
                            "type": "string"
                        }
                    },
                    "required": [
                        "s3etag",
                        "sha1",
                        "sha256",
                        "crc32"
                    ],
                    "type": "object"
                },
                "content_type": {
                    "description": "type of file e.g hca-biomaterial-json, hca-process-json, hca-rnaseq-fastq-gz",
                    "type": "string"
                },
                "id": {
                    "description": "URI of the Data Storage System file resource that describes this file",
                    "type": "string"
                },
                "name": {
                    "description": "Name of the file",
                    "type": "string"
                },
                "size": {
                    "description": "Length of file in bytes",
                    "type": "integer"
                }
            },
            "required": [
                "name",
                "content_type",
                "size",
                "id",
                "checksums"
            ],
            "type": "object"
        },
        "submitted_files": {
            "additionalProperties": false,
            "description": "",
            "items": {
                "$ref": "https://schema.humancellatlas.org/bundle/5.1.0/submission#/definitions/file"
            },
            "type": "array"
        },
        "transfer_service_version": {
            "additionalProperties": false,
            "description": "",
            "type": "string"
        }
    },
    "description": "Information added to a submission at ingest.",
    "id": "https://schema.humancellatlas.org/bundle/5.1.0/submission",
    "properties": {
        "describedBy": {
            "description": "The URL reference to the schema.",
            "pattern": "https://schema.humancellatlas.org/bundle/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/submission",
            "type": "string"
        },
        "schema_type": {
            "description": "The type of the metadata schema entity.",
            "enum": [
                "submission"
            ],
            "type": "string"
        },
        "schema_version": {
            "description": "The version number of the schema in major.minor.patch format.",
            "example": "4.6.1",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "type": "string"
        },
        "submitted_files": {
            "$ref": "https://schema.humancellatlas.org/bundle/5.1.0/submission#/definitions/submitted_files",
            "description": ""
        },
        "transfer_service_version": {
            "$ref": "https://schema.humancellatlas.org/bundle/5.1.0/submission#/definitions/transfer_service_version",
            "description": ""
        }
    },
    "required": [
        "describedBy",
        "transfer_service_version",
        "submitted_files"
    ],
    "title": "submission",
    "type": "object"
}