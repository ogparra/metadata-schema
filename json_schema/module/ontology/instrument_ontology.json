{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "description": "A term that may be associated with a instrument-related ontology term",
    "id": "https://schema.humancellatlas.org/module/ontology/5.1.0/instrument_ontology",
    "properties": {
        "describedBy": {
            "pattern": "https://schema.humancellatlas.org/module/ontology/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/instrument_ontology",
            "type": "string"
        },
        "ontology": {
            "description": "An ontology term identifier in the form prefix:accession",
            "graph_restriction": {
                "classes": [
                    "EFO:0000548"
                ],
                "direct": false,
                "include_self": false,
                "ontologies": [
                    "obo:efo"
                ],
                "relations": [
                    "rdfs:subClassOf"
                ]
            },
            "type": "string"
        },
        "schema_version": {
            "description": "Version number in major.minor.patch format.",
            "example": "4.6.1",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "type": "string"
        },
        "text": {
            "description": "The full name of the instrument used.",
            "type": "string"
        }
    },
    "required": [
        "text"
    ],
    "title": "instrument_ontology",
    "type": "object"
}