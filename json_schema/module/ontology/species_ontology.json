{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "description": "A term that may be associated with a species-related ontology term",
    "id": "https://schema.humancellatlas.org/module/ontology/5.1.2/species_ontology",
    "properties": {
        "describedBy": {
            "description": "The URL reference to the schema.",
            "pattern": "https://schema.humancellatlas.org/module/ontology/[0-9]{1,}.[0-9]{1,}.[0-9]{1,}/species_ontology",
            "type": "string"
        },
        "ontology": {
            "description": "An ontology term identifier in the form prefix:accession",
            "graph_restriction": {
                "classes": [
                    "OBI:0100026",
                    "NCBITaxon:2759"
                ],
                "direct": false,
                "include_self": false,
                "ontologies": [
                    "obo:efo",
                    "obo:NCBITaxon"
                ],
                "relations": [
                    "rdfs:subClassOf"
                ]
            },
            "type": "string"
        },
        "schema_version": {
            "description": "The version number of the schema in major.minor.patch format.",
            "example": "4.6.1",
            "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
            "type": "string"
        },
        "text": {
            "description": "The name of the species to which the organism belongs.",
            "type": "string"
        }
    },
    "required": [
        "text"
    ],
    "title": "species_ontology",
    "type": "object"
}